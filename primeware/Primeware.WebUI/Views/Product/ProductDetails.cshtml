@model IEnumerable<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@foreach (var item in Model)
{


    <table border="1" cellpadding="0" cellspacing="0" style="width:100%">
        <tbody>
            <tr>
                <td style="width:20.28%"><div style="text-align: center;"><strong>YAZILIM TANIMI</strong></div></td>
                <td style="width:79.72%">
                    <p>
                        @{
                            string[] list = item.ProductDetails.Split("\n");
                            foreach (var element in list)
                            {
                            <p>
                                @element
                            </p>
                        }
                        }
                        </p>
                    </td>
                </tr>
                <tr>
                    <td style="width:20.28%"><div style="text-align: center;"><strong>TEMEL İŞLEV VE ÖZELLİKLER</strong></div></td>
                    <td style="width:79.72%">
                        <p>
                            @{
                                string[] list2 = item.ProductDetails2.Split("\n");
                                foreach (var element2 in list)
                                {
                                <p>
                                    @element2
                                </p>
                            }
                            }
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>

        }                                                     