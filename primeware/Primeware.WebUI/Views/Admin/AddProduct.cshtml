@model EntityLayer.Concrete.Product
@{
    Layout = null;
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ürün Ekleme Sayfası</h4>
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)

                    <label for="exampleInputName1">Ürün Adı</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = ("form-control") })

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Ürün Tipi</label>
                    @Html.TextBoxFor(x => x.ProductType, new { @class = ("form-control") })

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Ürün Detayı</label>
                    @Html.TextBoxFor(x => x.ProductDetails, new { @class = "form-control" })

                </div>  <div class="form-group">
                    <label for="exampleInputPassword4">Ürün Detay2</label>
                    @Html.TextBoxFor(x => x.ProductDetails2, new { @class = "form-control" })

                </div>  
          @*      <div class="form-group">
                    <label>Product Image</label>
                    <input type="file" name="ProductImage"/>

                </div>*@

                <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
                @*<button class="btn btn-light">İptal</button>*@
            </div>
        </div>
    </div>
</form>
