@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}


<section class="section teams">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="section-title text-center">
                    <h1 class="text-primary text-uppercase fw-bold mb-3">ÜRÜNLERİMİZ</h1>
                    <p class="mb-0">
                        Kaliteli, güvenilir ürünlerimiz ile hizmetinizdeyiz
                        <br>cursus pellentesque dignissim dui, congue. Vel etiam ut
                    </p>
                </div>
            </div>
        </div>
        <div class="inner-sec">


            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">


                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">

                            <div>
                                <div class="col-xl-3 col-lg-8 col-md-6 mt-4">
                                    <div class="card bg-transparent border-0 text-center">
                                        <div class="card-img">
                                            <img loading="lazy" decoding="async" src="@item.ProductImage" alt="Scarlet Pena" class="rounded w-100" width="500" height="500">
                                            <ul class="card-social list-inline">
                                                <li class="list-inline-item">
                                                    <a href="/Product/ProductDetails/@item.Id/"><i class="fas fa-external-link-alt"></i></a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="card-body">
                                            <h3><a href="/Product/ProductDetails/@item.Id/" class="text-black">@item.ProductName</a></h3>
                                            <p>@item.ProductType</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<a href="/Admin/Index/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
<td><a href="/Product/DeleteProduct/" onclick="return confirm('Silme istediğine emin misin');" class="btn btn-danger">Sil</a></td>
